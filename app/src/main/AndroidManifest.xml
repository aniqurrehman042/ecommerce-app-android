    package="com.sahoolatkar.sahoolatkar">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.ProductDetailsActivity"></activity>
        <activity android:name=".ui.ProductsActivity" />
        <activity android:name=".ui.PinCreationActivity" />
        <activity android:name=".ui.RegistrationSuccessActivity" />
        <activity android:name=".ui.WorkInfoActivity" />
        <activity android:name=".ui.OptionalInfoActivity" />
        <activity android:name=".ui.VerificationActivity" />
        <activity android:name=".ui.SignInSignUpActivity" />
        <activity android:name=".ui.GettingStartedActivity" />
        <activity android:name=".ui.SplashActivity">

        </activity>
        <activity android:name=".ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>