<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.fragments.ProductOverviewFragment"
    android:orientation="vertical"
    android:padding="@dimen/padding_small">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textColor="@color/black"
        android:textSize="@dimen/text_item_details"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvHighlights"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="&#8226; Air flow inflates\n&#8226; Detachable air hose\n&#8226; Universal Valve\n&#8226; Inflates on both out stroke and in stroke"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/margin_tiny"
        android:textSize="@dimen/text_item_details" />

</LinearLayout>