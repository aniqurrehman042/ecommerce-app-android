<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivBackButton"
        android:layout_width="@dimen/size_back_button"
        android:layout_height="@dimen/size_back_button"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_25sdp"
        android:background="@color/red"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_left_arrow_white" />

    <ImageView
        android:id="@+id/ivPleaseWait"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:layout_marginTop="168dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_menu_storelocator_red"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_25sdp"
        android:text="Please Wait"
        android:textColor="@color/red"
        android:textSize="@dimen/text_heading"
        app:layout_constraintEnd_toEndOf="@+id/ivPleaseWait"
        app:layout_constraintStart_toStartOf="@+id/ivPleaseWait"
        app:layout_constraintTop_toBottomOf="@+id/ivPleaseWait" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:lineSpacingExtra="8sp"
        android:lines="1"
        android:text="Your Request is currently being processed"
        android:textSize="@dimen/text_normal"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />
</androidx.constraintlayout.widget.ConstraintLayout>