<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ProductDetailsActivity">

    <com.smarteist.autoimageslider.SliderView
        android:id="@+id/productSlider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_300sdp"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvCompanyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Company Name"
        android:textColor="@color/blue"
        android:textSize="@dimen/text_extra_small"
        app:layout_constraintTop_toBottomOf="@id/productSlider"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/margin_tiny"
        android:layout_marginLeft="@dimen/margin_tiny"/>

    <TextView
        android:id="@+id/tvProductName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product name"
        android:textColor="@color/black"
        android:textSize="@dimen/text_small"
        app:layout_constraintTop_toBottomOf="@id/tvCompanyName"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/margin_tiny"
        android:layout_marginLeft="@dimen/margin_tiny" />

    <TextView
        android:id="@+id/tvCurrency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PKR"
        android:textColor="@color/black"
        android:textSize="@dimen/text_small"
        app:layout_constraintTop_toBottomOf="@id/tvProductName"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/margin_tiny"
        android:layout_marginLeft="@dimen/margin_tiny" />

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10000"
        android:textColor="@color/black"
        android:textSize="@dimen/text_normal"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/tvCurrency"
        app:layout_constraintLeft_toRightOf="@id/tvCurrency"
        android:layout_marginLeft="@dimen/_3sdp" />

    <TextView
        android:id="@+id/tvDeliverTo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Deliver to Dubai"
        android:paddingHorizontal="@dimen/padding_small"
        android:paddingVertical="@dimen/_3sdp"
        app:layout_constraintTop_toBottomOf="@id/tvPrice"
        android:layout_marginTop="@dimen/margin_tiny"
        android:textColor="@color/black"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vpProductDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_tiny"
        app:layout_constraintTop_toBottomOf="@id/tvDeliverTo"/>

</androidx.constraintlayout.widget.ConstraintLayout>