<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.smarteist.autoimageslider.SliderView
            android:id="@+id/imageSlider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            app:sliderAnimationDuration="600"
            app:sliderAutoCycleDirection="back_and_forth"
            app:sliderAutoCycleEnabled="true"
            app:sliderIndicatorAnimationDuration="600"
            app:sliderIndicatorGravity="center_horizontal|bottom"
            app:sliderIndicatorMargin="15dp"
            app:sliderIndicatorOrientation="horizontal"
            app:sliderIndicatorPadding="3dp"
            app:sliderIndicatorRadius="2dp"
            app:sliderIndicatorSelectedColor="#5A5A5A"
            app:sliderIndicatorUnselectedColor="#FFF"
            app:sliderScrollTimeInSec="3"
            app:sliderStartAutoCycle="true"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tvCategoriesHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_normal"
            android:text="Categories"
            android:textColor="@color/black"
            android:textSize="@dimen/text_small"
            app:layout_constraintTop_toBottomOf="@id/imageSlider"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/black"
            app:cardCornerRadius="10dp"
            android:scaleY="1.3"
            app:cardElevation="25dp"
            app:layout_constraintTop_toTopOf="@id/rvCategories"
            app:layout_constraintBottom_toBottomOf="@id/rvCategories" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCategories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:clipToPadding="false"
            android:paddingRight="@dimen/padding_normal"
            android:background="@color/transparent"
            android:elevation="30dp"
            app:layout_constraintTop_toBottomOf="@id/tvCategoriesHeading"/>

        <TextView
            android:id="@+id/tvMobilesHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_large"
            android:text="Mobiles"
            android:textColor="@color/black"
            android:textSize="@dimen/text_small"
            app:layout_constraintTop_toBottomOf="@id/rvCategories"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvMobiles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_tiny"
            android:paddingHorizontal="@dimen/padding_normal"
            android:clipToPadding="false"
            app:layout_constraintTop_toBottomOf="@id/tvMobilesHeading"/>

            <ImageView
                android:id="@+id/iv1stBanner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_normal"
                app:layout_constraintTop_toBottomOf="@id/rvMobiles"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvMobiles2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_tiny"
            android:paddingHorizontal="@dimen/padding_normal"
            android:clipToPadding="false"
            app:layout_constraintTop_toBottomOf="@id/iv1stBanner"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>