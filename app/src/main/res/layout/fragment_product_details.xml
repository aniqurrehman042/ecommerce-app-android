<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.ProductDetailsFragment">

    <com.asksira.loopingviewpager.LoopingViewPager
        android:id="@+id/productSlider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_300sdp"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvCompanyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Company Name"
        android:textColor="@color/blue"
        android:textSize="@dimen/text_extra_small"
        app:layout_constraintTop_toBottomOf="@id/productSlider"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/margin_tiny"
        android:layout_marginLeft="@dimen/margin_tiny"/>

    <TextView
        android:id="@+id/tvProductName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product name"
        android:textColor="@color/black"
        android:textSize="@dimen/text_small"
        app:layout_constraintTop_toBottomOf="@id/tvCompanyName"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/margin_tiny"
        android:layout_marginLeft="@dimen/margin_tiny" />

    <TextView
        android:id="@+id/tvCurrency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PKR"
        android:textColor="@color/black"
        android:textSize="@dimen/text_small"
        app:layout_constraintTop_toBottomOf="@id/tvProductName"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/margin_tiny"
        android:layout_marginLeft="@dimen/margin_tiny" />

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10000"
        android:textColor="@color/black"
        android:textSize="@dimen/text_normal"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/tvCurrency"
        app:layout_constraintLeft_toRightOf="@id/tvCurrency"
        android:layout_marginLeft="@dimen/_3sdp" />

    <TextView
        android:id="@+id/tvDeliverTo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Deliver to Dubai"
        android:paddingHorizontal="@dimen/padding_small"
        android:paddingVertical="@dimen/_3sdp"
        app:layout_constraintTop_toBottomOf="@id/tvPrice"
        android:layout_marginTop="@dimen/margin_tiny"
        android:textColor="@color/black"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vpProductDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_tiny"
        app:layout_constraintTop_toBottomOf="@id/tvDeliverTo">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tlProductDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </androidx.viewpager.widget.ViewPager>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/llAddOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="@dimen/size_back_button"
            android:layout_height="@dimen/size_back_button"
            android:layout_marginStart="@dimen/_20sdp"
            android:src="@android:drawable/btn_plus"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvItemCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_2sdp"
            android:text="2"
            android:textSize="@dimen/text_normal"
            app:layout_constraintBottom_toBottomOf="@+id/imageButton"
            app:layout_constraintStart_toEndOf="@+id/imageButton"
            app:layout_constraintTop_toTopOf="@+id/imageButton" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="@dimen/size_back_button"
            android:layout_height="@dimen/size_back_button"
            android:layout_marginStart="@dimen/_2sdp"
            android:src="@android:drawable/btn_plus"
            app:layout_constraintBottom_toBottomOf="@+id/imageButton"
            app:layout_constraintStart_toEndOf="@+id/tvItemCount"
            app:layout_constraintTop_toTopOf="@+id/imageButton" />

        <Button
            android:id="@+id/button2"
            android:layout_width="@dimen/_170sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginStart="@dimen/_75sdp"
            android:text="Add To Cart"
            app:layout_constraintBottom_toBottomOf="@+id/imageButton2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageButton2"
            app:layout_constraintTop_toTopOf="@+id/imageButton2" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>