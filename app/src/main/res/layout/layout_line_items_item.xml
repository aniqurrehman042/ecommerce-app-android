<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="@dimen/_50sdp">

    <View
        android:id="@+id/vTopLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dark_grey"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/vTopLine"
        android:layout_marginTop="@dimen/margin_tiny">

        <TableRow>

            <TextView
                android:id="@+id/tvProductNameHeading"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Product Name"
                android:layout_weight="0.5"
                android:textColor="@color/black"
                android:textSize="@dimen/text_super_normal" />

            <TextView
                android:id="@+id/tvProductName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_weight="0.5"
                android:textColor="@color/black"
                android:textSize="@dimen/text_super_normal" />

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/tvPriceHeading"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Price"
                android:layout_weight="0.5"
                android:textColor="@color/black"
                android:textSize="@dimen/text_super_normal" />

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="1000"
                android:layout_weight="0.5"
                android:textColor="@color/black"
                android:textSize="@dimen/text_super_normal" />

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/tvQtyHeading"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Quantity"
                android:layout_weight="0.5"
                android:textColor="@color/black"
                android:textSize="@dimen/text_super_normal" />

            <TextView
                android:id="@+id/tvQty"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_weight="0.5"
                android:textColor="@color/black"
                android:textSize="@dimen/text_super_normal" />

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/tvSubTotalHeading"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Sub Total"
                android:layout_weight="0.5"
                android:textColor="@color/black"
                android:textSize="@dimen/text_super_normal" />

            <TextView
                android:id="@+id/tvSubTotal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="1000"
                android:layout_weight="0.5"
                android:textColor="@color/black"
                android:textSize="@dimen/text_super_normal" />

        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>